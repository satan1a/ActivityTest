<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/apple_pic"
        />

    <Button
        android:id="@+id/button_slide_up"
        android:layout_below="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Slide Up"
        />
    <Button
    android:id="@+id/button_slide_down"
    android:layout_below="@+id/imageView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Slide Down"
    />
    <Button
        android:id="@+id/button_fade_in"
        android:layout_below="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fade In"
        />
    <Button
        android:id="@+id/button_fade_out"
        android:layout_below="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fade Out"
        />
    <Button
        android:id="@+id/button_rotate_clockwise"
        android:layout_below="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rotate Clockwise"
        />
</LinearLayout>


